<% include ../partials/header %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">MovieFlix</p>
			<div class="list-group">
				<li class="list-group-item">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
						

						<img class="img-responsive" src="<%=movie.poster%>">
                        <div class="caption-full">
                        	<h4 class="pull-right"></h4>
                        	<h4><a href="#"><%= movie.title%></a></h4>
                        	<p><%=movie.plot%></p>
                        </div>
						
			</div>
			<div class="well">
				<div class="text-right">
					<p><a href="/movies/<%= movie._id %>/comments/new" class="btn btn-success">Leave Comment</a></p>
				</div>
				<!-- <p><a class="btn btn-primary btn-lg" href="/movies">Go Back</a> </p> -->
				<% movie.comments.forEach(function(comment){ %>
				    <div class="row">
				    	<div class="col-md-12">
				    		<strong><%=comment.author%></strong> 
				    		<span class="pull-right">10 days</span>
				    		<p><%=comment.text%></p>
				    	</div>
				    </div>
							
			    <% }) %>		
						
			</div>
	
		</div>
	</div>
	
</div>
<% include ../partials/footer %>